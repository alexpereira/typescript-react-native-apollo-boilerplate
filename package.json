{
    "name": "typescript-react-native-apollo-boilerplate",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "start": "node node_modules/react-native/local-cli/cli.js start",
        "android": "react-native run-android",
        "ios": "react-native run-ios",
        "test": "npm run tslint && npm run tsc-test && npm run jest",
        "tslint": "tslint --project .",
        "tsc-test": "tsc --project . --noEmit",
        "jest": "jest",
        "jest-watch": "jest --watchAll",
        "codegen": "mkdir -p ./src/__generated__ && gql-gen --config codegen.yml"
    },
    "dependencies": {
        "react": "16.6.3",
        "react-native": "0.57.8",
        "react-native-gesture-handler": "^1.0.12",
        "react-navigation": "^3.0.9"
    },
    "devDependencies": {
        "@types/jest": "^23.3.12",
        "@types/react": "^16.7.18",
        "@types/react-native": "^0.57.25",
        "@types/react-navigation": "^3.0.1",
        "@types/react-test-renderer": "^16.0.3",
        "babel-core": "^6.26.3",
        "jest": "23.6.0",
        "metro-react-native-babel-preset": "^0.51.1",
        "react-native-typescript-transformer": "^1.2.11",
        "react-test-renderer": "16.6.3",
        "ts-jest": "^23.10.5",
        "tslint": "^5.12.0",
        "typescript": "^3.2.2"
    },
    "jest": {
        "preset": "react-native",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
            "\\.(ts|tsx)$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "node_modules/(?!(jest-)?react-native|react-navigation|@react-navigation)"
        ],
        "testMatch": [
            "**/__tests__/**/*.ts?(x)"
        ],
        "globals": {
            "ts-jest": {
                "tsConfig": {
                    "jsx": "react"
                }
            },
            "__TEST__": true
        },
        "setupFiles": [
            "./jestSetup.js"
        ]
    }
}
